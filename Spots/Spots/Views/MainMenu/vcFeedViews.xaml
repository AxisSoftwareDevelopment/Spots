<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spots.Views.MainMenu.vcFeedViews"
             Title="vcFeedViews"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!-- Nav bar -->
            <RowDefinition Height="15*"/> <!-- Tabbed View -->
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Orientation="Horizontal" BackgroundColor="{DynamicResource Primary}">
            <Border x:Name="_FrameProfilePicture" Padding="0" Margin="5,5,5,5" StrokeShape="RoundRectangle 500">
                <ImageButton x:Name="_ProfileImage" Aspect="AspectFill" Source="{Binding profilePictureAddress}" />
            </Border>

            <Label Text="----- Spots -----" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>

            <ImageButton x:Name="_imgLogoRight" Margin="0,0,5,0" HeightRequest="35" WidthRequest="35"
                   Source="{Binding profilePictureAddress}" />
        </StackLayout>

        <ContentView 
            x:Name="_ContentView"
            Grid.Row="1"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"/>

    </Grid>
    
</ContentPage>