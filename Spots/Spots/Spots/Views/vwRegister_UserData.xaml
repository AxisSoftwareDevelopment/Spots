<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spots.Views.vwRegister_UserData"
             BackgroundColor="{Binding cl_MainBrand}">
    <NavigationPage.TitleView>
        <Label Text="{Binding lbl_UserData}" TextColor="{Binding cl_TextOnElse}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Start"></Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Frame x:Name="_frameRegisterForm" Margin="20, 30" HasShadow="True" CornerRadius="50" BackgroundColor="{Binding cl_BackGround}">
            <ScrollView x:Name="_scrollviewMain" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never">
                <StackLayout>
                    <Label x:Name="_lblRegisterError" Text="" IsVisible="False" TextColor="{Binding cl_TextError}"></Label>
                    <Label Text="{Binding lbl_RegisterFirstName}" TextColor="{Binding cl_TextOnBG}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"
                           Margin="0,20,0,0"></Label>
                    <Entry x:Name="_entryFirstName" Placeholder="{Binding lbl_FirstNamePlaceHolder}" HorizontalOptions="FillAndExpand" 
                            Keyboard="Email" ReturnType="Next"></Entry>
                    <Label Text="{Binding lbl_RegisterLastName}" TextColor="{Binding cl_TextOnBG}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"></Label>
                    <Entry x:Name="_entryLastName" Placeholder="{Binding lbl_LastNamePlaceHolder}" HorizontalOptions="FillAndExpand" 
                            Keyboard="Email" ReturnType="Next"></Entry>
                    <Label Text="{Binding lbl_BirthdateField}" TextColor="{Binding cl_TextOnBG}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"></Label>
                    <DatePicker x:Name="_dateBirthdate" Format="Pick a date..." TextColor="#AFAFAF"></DatePicker>
                    <Button x:Name="_btnRegister" Text="{Binding lbl_Next}" CornerRadius="20" BackgroundColor="{Binding cl_MainBrand}" TextColor="{Binding cl_TextOnElse}"
                            Margin="0,20,0,0" VerticalOptions="CenterAndExpand" Clicked="BtnRegisterOnClick"></Button>
                </StackLayout>
            </ScrollView>
        </Frame>
    </ContentPage.Content>
</ContentPage>