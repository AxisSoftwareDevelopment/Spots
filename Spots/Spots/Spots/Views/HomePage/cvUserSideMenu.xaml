<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spots.Views.HomePage.cvUserSideMenu">
    <ContentView.Content>
        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Frame Grid.Row="0" Padding="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" CornerRadius="100"
                       Margin="50,30,50,0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ProfilePictureOnClicked"/>
                    </Frame.GestureRecognizers>
                    <Image x:Name="_ProfileImage" Aspect="AspectFill" Source="{Binding profilePictureAddress}"></Image>
                </Frame>
                <Label Grid.Row="1" Text="{Binding fullName}" HorizontalOptions="Center" FontAttributes="Bold" FontSize="20" VerticalOptions="Start"/>
            </Grid>

            <StackLayout Grid.Row="1">
                
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>