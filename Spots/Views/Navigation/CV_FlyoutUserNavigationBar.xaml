<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spots.CV_FlyoutUserNavigationBar"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Grid.Row="0" Orientation="Horizontal" BackgroundColor="{DynamicResource Primary}">
        <Border x:Name="_FrameProfilePicture" Padding="0" Margin="5,5,5,5" StrokeShape="RoundRectangle 500">
            <ImageButton x:Name="_ProfileImage" Aspect="AspectFill" Source="{Binding ProfilePictureSource}" Clicked="ProfilePictureOnClicked"/>
        </Border>

        <Label Text="----- Spots -----" VerticalOptions="Center" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"/>

        <ImageButton x:Name="_btnOpenSearch" Margin="30,0,10,0" HeightRequest="35" WidthRequest="35"
                   Source="{Binding ProfilePictureSource}" BackgroundColor="Red" />
    </StackLayout>

</ContentView>