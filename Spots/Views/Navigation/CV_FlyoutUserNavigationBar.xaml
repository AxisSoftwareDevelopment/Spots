<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spots.CV_FlyoutUserNavigationBar"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Grid.Row="0" Orientation="Horizontal" BackgroundColor="{DynamicResource Primary}">
        <Border x:Name="_FrameProfilePicture" Padding="0" Margin="5" StrokeShape="RoundRectangle 500" StrokeThickness="0">
            <ImageButton x:Name="_ProfileImage" Aspect="AspectFill" Source="{Binding ProfilePictureSource}" Clicked="ProfilePictureOnClicked"/>
        </Border>

        <Image Source="logolong.png" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="43,0,0,0"/>

        <StackLayout Margin="30,0,10,0" Orientation="Horizontal">
            <ImageButton x:Name="_btnOpenNotifications"  HeightRequest="27" WidthRequest="27" Source="{Binding NotificationsPageIcon}" Margin="0,0,10,0"/>
            <ImageButton x:Name="_btnOpenSearch"  HeightRequest="25" WidthRequest="25" Source="iconsearch.png"/>
        </StackLayout>
    </StackLayout>

</ContentView>